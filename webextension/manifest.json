{
  "manifest_version": 2,
  "name": "slink",
  "version": "1.0",

  "applications": {
    "gecko":  {
      "id": "slink@wcerfgba.github.com",
      "strict_min_version": "45.0"
    }
  },

  "permissions": [
    "<all_urls>"
  ],

  "background":  {
    "scripts": [ "slink.js" ],
    "persistent": false
  },

  "browser_action": {
    "default_title":  "slink"
  }
}
