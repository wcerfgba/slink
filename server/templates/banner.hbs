<div class="slink-banner">
  <a class="slink-banner__homepage-link" href="{{ homepage }}">
    <img src="/public/icon.png">
  </a>
  <div class="slink-banner__metadata-container">
    <span class="slink-banner__metadata-line">Original URL: <a href="{{ location }}">{{ location }}</a></span>
    <span class="slink-banner__metadata-line">Retrieved at: {{ retrieval_time }}</span>
    <span class="slink-banner__metadata-line">Verified: {{ verified }}</span>
  </div>
  <a class="slink-banner__verified-link" href="{{ homepage }}/verification.html" target="_blank">
    <img src="/public/verified-{{ verified }}.png">
  </a>
</div>
